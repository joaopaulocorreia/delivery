<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="column is-4">
  <div class="card w-full">
    <header class="card-header">
      <p class="card-header-title">Login</p>
      <button class="card-header-icon">
        <span class="icon">
          <i class="fas fa-angle-down"></i>
        </span>
      </button>
    </header>
    <div class="card-content">
      <div class="content">
        <%= render "auth/sign_in/form", sign_in_form: @sign_in_form %>
      </div>
    </div>
    <footer class="card-footer">
      <div class="card-footer-item is-justify-content-space-around is-align-content-center">
        <%= link_to "forgot password?", "", class: "is-align-content-center" %>
        <button type='submit' form='sign_in_form' class='button is-link'>login</button>
      </div>
    </footer>
  </div>
</div>
